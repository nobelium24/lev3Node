<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <style>
    table {
      width: 70%;
      border-collapse: collapse;
      margin: 50px auto;
    }

    table,
    th,
    td {
      border: 1px solid black;
    }

    th,
    td {
      padding: 15px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }
  </style>
  <body>
    <form
      action="/users/"
      method="post"
      class="col-11 col-md-8 col-lg-5 mx-auto card bg-light shadow border-0 p-2 mt-5"
    >
      <h1 class="text-primary text-center">Student Registration Form</h1>
      <input
        type="text"
        class="form-control my-2"
        placeholder="Enter First Name"
        name="firstName"
      />
      <input
        type="text"
        class="form-control my-2"
        placeholder="Enter Last Name"
        name="lastName"
      />
      <input
        type="text"
        class="form-control my-2"
        placeholder="Enter Email"
        name="email"
      />
      <input
        type="text"
        class="form-control my-2"
        placeholder="Enter Password"
        name="password"
      />
      <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>

    <table>
      <tr>
        <th>S/N</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Action</th>
      </tr>

      <% if (AllUsers && AllUsers.length > 0) { %> <% AllUsers.forEach((user,
      index) => { %>
      <tr>
        <td><%= index +1 %></td>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td class="d-flex align-items-center gap-2">
          <form action="/users/editUser/<%= user._id%>" method="post">
            <button type="submit" class="btn btn-success">Edit</button>
          </form>
          <form action="/users/delete/<%= user._id %>" method="post">
            <button type="submit" class="btn btn-danger">Del</button>
          </form>
        </td>
      </tr>
      <% }) %> <% } %>
    </table>
  </body>
</html>
